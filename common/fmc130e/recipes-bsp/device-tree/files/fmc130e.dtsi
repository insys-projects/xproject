// FMC130E v 1.2
&gem0 {
    phy-handle = <&phy0>;
    ps7_ethernet_0_mdio: mdio {
        #address-cells = <0x1>;
        #size-cells = <0x0>;
        phy0: phy@0 {
            compatible = "marvell,88e1510";
            device_type = "ethernet-phy";
            reg = <0>;
        };
    };
};

&usb0 {
    status = "okay";
    usb-phy = <&usb_phy0>;
    phy_type = "ulpi";
    dr_mode = "host";
};

&uart0 {
    status = "okay";
};

&uart1 {
    status = "okay";
};
